#!/bin/bash

# Â© 2016 jugular@shadowplay.net ALL RIGHTS RESERVED

# $1 - database
# $2 - user
# $3 - password

if [ $# -lt 3 ]
then
	echo "Usage: djdatabase db_name db_user db_password"
	exit;
fi

su - postgres -c "createuser $2; createdb -O $2 $1; psql -c \"alter user $2 with encrypted password '$3';\"; "


